# Variables d'environnement pour Zenbilling Microservices

# ==============================================
# BASE DE DONNÉES
# ==============================================
DATABASE_URL=postgresql://zenbilling:zenbilling_password@postgres:5432/zenbilling

# ==============================================
# AUTHENTIFICATION (auth_service)
# ==============================================
BETTER_AUTH_SECRET=your-very-secure-secret-key-here-change-in-production
BETTER_AUTH_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:8080
COOKIE_DOMAIN=localhost

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ==============================================
# PAIEMENTS (stripe_service)
# ==============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ==============================================
# EMAIL (email_service)
# ==============================================
BREVO_API_KEY=aFdr...

# ==============================================
# IA (ai_service)
# ==============================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ==============================================
# DOMAINES DE PRODUCTION
# ==============================================
# Remplacer localhost par vos vrais domaines en production
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
AUTH_DOMAIN=auth.yourdomain.com
APP_DOMAIN=app.yourdomain.com

# ==============================================
# REDIS (optionnel)
# ==============================================
REDIS_URL=redis://redis:6379

# ==============================================
# PORTS DES SERVICES
# ==============================================
# Ports par défaut pour chaque service
PORT_API_GATEWAY=8080
PORT_AUTH_SERVICE=3001
PORT_COMPANY_SERVICE=3002
PORT_STRIPE_SERVICE=3003
PORT_DASHBOARD_SERVICE=3004
PORT_INVOICE_SERVICE=3005
PORT_QUOTE_SERVICE=3006
PORT_EMAIL_SERVICE=3007
PORT_PRODUCT_SERVICE=3008
PORT_CUSTOMER_SERVICE=3009
PORT_PDF_SERVICE=3010
PORT_AI_SERVICE=3011

# ==============================================
# URLS DES SERVICES INTERNES
# ==============================================
# URLs pour la communication inter-services
AUTH_SERVICE_URL=http://localhost:3001
COMPANY_SERVICE_URL=http://localhost:3002
STRIPE_SERVICE_URL=http://localhost:3003
DASHBOARD_SERVICE_URL=http://localhost:3004
INVOICE_SERVICE_URL=http://localhost:3005
QUOTE_SERVICE_URL=http://localhost:3006
EMAIL_SERVICE_URL=http://localhost:3007
PRODUCT_SERVICE_URL=http://localhost:3008
CUSTOMER_SERVICE_URL=http://localhost:3009
PDF_SERVICE_URL=http://localhost:3010
AI_SERVICE_URL=http://localhost:3011

# ==============================================
# ENVIRONNEMENT
# ==============================================
NODE_ENV=development