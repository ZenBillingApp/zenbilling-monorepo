{
  "name": "zenbilling-auth-service",
  "description": "Service d'authentification Zenbilling",
  "image": "ghcr.io/Hassan-JERRAR/zenbilling-auth-service:latest",
  "port": 3001,
  "environment": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "PORT", 
      "value": "3001"
    },
    {
      "key": "DATABASE_URL",
      "value": "${DATABASE_URL}"
    },
    {
      "key": "BETTER_AUTH_SECRET",
      "value": "${BETTER_AUTH_SECRET}"
    },
    {
      "key": "BETTER_AUTH_URL",
      "value": "${BETTER_AUTH_URL}"
    },
    {
      "key": "CLIENT_URL",
      "value": "${CLIENT_URL}"
    },
    {
      "key": "CLIENT_URL_2", 
      "value": "${CLIENT_URL_2}"
    },
    {
      "key": "GOOGLE_CLIENT_ID",
      "value": "${GOOGLE_CLIENT_ID}"
    },
    {
      "key": "GOOGLE_CLIENT_SECRET",
      "value": "${GOOGLE_CLIENT_SECRET}"
    },
    {
      "key": "COOKIE_DOMAIN",
      "value": "${COOKIE_DOMAIN}"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "volumes": [],
  "networks": ["zenbilling-network"],
  "restart": "unless-stopped"
}