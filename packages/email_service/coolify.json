{
  "name": "zenbilling-email-service",
  "description": "Service d'envoi d'emails Zenbilling",
  "image": "ghcr.io/your-username/zenbilling-email-service:latest",
  "port": 3007,
  "environment": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "PORT",
      "value": "3007"
    },
    {
      "key": "DATABASE_URL",
      "value": "${DATABASE_URL}"
    },
    {
      "key": "SMTP_HOST",
      "value": "${SMTP_HOST}"
    },
    {
      "key": "SMTP_PORT",
      "value": "${SMTP_PORT}"
    },
    {
      "key": "SMTP_USER",
      "value": "${SMTP_USER}"
    },
    {
      "key": "SMTP_PASS",
      "value": "${SMTP_PASS}"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "volumes": [],
  "networks": ["zenbilling-network"],
  "restart": "unless-stopped"
}