{
  "name": "zenbilling-api-gateway",
  "description": "API Gateway Zenbilling - Point d'entr√©e principal",
  "image": "ghcr.io/Hassan-JERRAR/zenbilling-api-gateway:latest",
  "port": 8080,
  "environment": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "PORT",
      "value": "8080"
    }
  ],
  "domains": [
    {
      "domain": "${DOMAIN}",
      "path": "/"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "volumes": [],
  "networks": ["zenbilling-network"],
  "restart": "unless-stopped",
  "labels": {
    "coolify.managed": "true",
    "coolify.name": "zenbilling-api-gateway",
    "coolify.public": "true"
  }
}