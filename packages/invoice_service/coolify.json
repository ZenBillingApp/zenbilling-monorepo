{
  "name": "zenbilling-invoice-service",
  "description": "Service de gestion des factures Zenbilling",
  "image": "ghcr.io/your-username/zenbilling-invoice-service:latest",
  "port": 3005,
  "environment": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "PORT",
      "value": "3005"
    },
    {
      "key": "DATABASE_URL",
      "value": "${DATABASE_URL}"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "volumes": [],
  "networks": ["zenbilling-network"],
  "restart": "unless-stopped"
}