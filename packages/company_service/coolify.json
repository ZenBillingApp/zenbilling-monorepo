{
  "name": "zenbilling-company-service",
  "description": "Service de gestion des entreprises Zenbilling",
  "image": "ghcr.io/Hassan-JERRAR/zenbilling-company-service:latest",
  "port": 3002,
  "environment": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "PORT",
      "value": "3002"
    },
    {
      "key": "DATABASE_URL",
      "value": "${DATABASE_URL}"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "volumes": [],
  "networks": ["zenbilling-network"],
  "restart": "unless-stopped"
}